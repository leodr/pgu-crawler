{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": false,
        "outDir": "./build/",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
}
